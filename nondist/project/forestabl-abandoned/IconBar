set ui$bitmap_directory concat(c$libdir, "/icons")

read ToolBar

!
! Project iconbar
!
define widget iconbar menubar " "
	noheader

	menu help bitmap iconbar-help
		title 'Zebra Help Access'
		line
		entry 'Introduction' 'help intro'
