	entry 'East Wind Component m/s' 'PutCompField c_sfc_5min u_wind'
	entry 'West Wind Component m/s' 'PutCompField c_sfc_5min v_wind'
	entry 'Station Altitude km' 'PutCompField c_sfc_5min alt'
!	
endmenu


