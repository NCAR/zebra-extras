!
! Basic, vanilla stuff.
!
buttonmap basic
	local	mb-left 'drawbox pushcoord'
	local	m	'popup movie'
	local	r	'movie run'
	local	s	'movie stop'
	local	b	'popcoords'
	local	h	'help'
endmap

!
! Buttons for radar type windows, with radar toggling, xsect control, and
! so on.
!
