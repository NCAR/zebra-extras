!
! Generic PD for a gridded Binet winds display.
!
global
	pd-name:	p_binet_winds
p_binet_winds
	platform:	binet_gridded
	icon:		binet_winds
	representation:	vector
	u-field:	U_BEST
	v-field:	V_BEST
	altitude-control:	true
	arrow-scale:	0.005
	color:		red
	icon-left-menu:		standard-cap-left-menu
	icon-right-menu:	rg-winds-right
	limit-proc:	adj_arrow_scale
	require:	winds, simple-color
